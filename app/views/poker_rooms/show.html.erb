<div class="poker-room">
  <div class="poker-table-container">
    <div class="poker-table">
      <div class="community-cards"></div>
      <div class="pot-display">Pot: $0</div>
      <div class="player-areas"></div>
    </div>
  </div>

  <div class="player-controls">
    <div class="player-hand"></div>
    <div class="action-buttons">
      <button class="btn btn-fold">フォールド</button>
      <button class="btn btn-call">チェック</button>
      <div class="raise-controls">
        <input type="number" class="raise-amount" min="0" placeholder="レイズ額">
        <button class="btn btn-raise">レイズ</button>
      </div>
    </div>
  </div>

  <div class="player-list-container">
    <h3>プレイヤー一覧</h3>
    <div class="player-list"></div>
  </div>
</div>

<%= javascript_pack_tag 'poker_room' %>
